extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/assets/main.css")
    link(rel="stylesheet", href="/assets/add.css")

      
block content
    main
        form.product-form(action=`/admin/store/${product.id}`, method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", value=`${product.title}`)#title
                
                label(for="imageUrl") Image Url
                input(type="text", name="imageUrl", value=`${product.imageUrl}`)#imageUrl
                
                label(for="price") Price
                input(type="number", name="price", value=`${product.price}`)#price
                
                label(for="description") Description
                textarea(name="description")#description #{product.title}
                
            button.btn(type="submit") Update Product
